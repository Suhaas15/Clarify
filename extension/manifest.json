{
  "manifest_version": 3,
  "name": "Clarify",
  "version": "0.0.0",
  "description": "Highlight. Ask. Understand. Clarify transforms text into answers that actually make sense.",
  "action": { "default_popup": "popup.html" },
  "background": { "service_worker": "background.js", "type": "module" },
  "permissions": ["scripting","activeTab","clipboardRead","storage","contextMenus"],
  "host_permissions": ["<all_urls>","http://localhost:8787/","https://localhost:8787/"],
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["content.js"], "run_at": "document_idle" }
  ],
  "web_accessible_resources": [
    { "resources": ["icons/*"], "matches": ["<all_urls>"] }
  ],
  "icons": { "128": "icons/icon128.png" }
}
